<%= render "shared/navbars" %>
<div class="container">
  <div class="row">
    <%= render "shared/sidebar" %>

    <div class="col-md-10">
      <div id="midCol" data-spy="affix" data-offset-top="300">
        <div><h1>New Bill</h1></div>

        <%= simple_form_for @bill do |f| %>
            <%= f.input :name, :input_html => {:style => 'width: 50%'}%>
            <%= f.input :cost, :input_html => {:style => 'width: 30%'}%>
            <%= f.input :due_date %>
            <%= f.association :users %>
            <%= f.button :submit %>
        <% end %>

        <%= button_to 'Cancel', bills_path, class: 'btn btn-success btn-small'  %>

      </div>
    </div>

  </div>
</div>