<p id="notice"><%= notice %></p>

<%= render "shared/navbars" %>
<div class="container">
  <div class="row">
    <%= render "shared/sidebar" %>

    <div class="col-md-10">
      <div id="midCol" data-spy="affix" data-offset-top="300">

        <div class="well">
          <div class='text-center'>
            <h1><%= @chore.name %></h1>
            <h3>Requested by: <%= @chore.user_id %> | Status: <%= @chore.status %></h3>
          </div>
          <p><%= @chore.description %></p>

          <% if @chore.user_id == current_user.id %>
            <% if @chore.status == "Completed" %>
             <%= link_to 'Delete', chores_path, class: 'btn btn-danger btn-small text', :action => @chore.destroy %>
            <% else %>
              <%= link_to 'Edit', edit_chore_path(@chore), class: 'btn btn-success btn-small text', :method => :get %>
            <% end %>
          <% else %>
            <% if @chore.status == "Unaccepted" %>
             <%= link_to 'Accept', chores_path, class: 'btn btn-success btn-small text', :action => @chore.update_attribute(:assignee_id, current_user.id), :action => @chore.update_attribute(:status, "Accepted by #{(User.where(id:  @chore.assignee_id).take).name}") %>
            <% else if @chore.status == "Accepted by #{current_user.name}" %>
              <%= link_to 'Complete', chores_path, class: 'btn btn-success btn-small text', :action => @chore.update_attribute(:status, "Completed") %>
            
            
            <% end %>
            <% end %>
          

          <% end %>
          <%= link_to 'Back', chores_path, class: 'btn btn-danger btn-small text', :method => :get %> 
          
          
             
          
        </div>

      </div>
    </div>

  </div>
</div>


