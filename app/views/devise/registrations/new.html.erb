<nav class="navbar navbar-default navbar-float-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Roommate Connect</a>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Sign up", new_registration_path(resource_name) %></li>
        <li><%= link_to "Login", new_session_path(resource_name) %></li>
      </ul>
    </div><!--/.navbar-collapse -->
  </div>
</nav>

<div class="container">
  <div class="row">
    <div class="col-md-2"></div>

    <div class="col-md-8">
      <div id="midCol" data-spy="affix" data-offset-top="300">
        <div class="text-center"><h1>Sign Up</h1></div>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.input :email, label_html: { class: 'my_class' } %>
            <%= f.input :password, hint: false, error_html: { id: 'password_error'} %>
            <%= f.input :password_confirmation %>
            <%= f.input :household_name %>
            <%= f.input :code %>
            <p>Enter code when joining a household, otherwise leave blank.</p>
            <%= f.button :submit, "Sign Up" %>
        <% end %>

        <%- if controller_name != 'sessions' %>
            <%= link_to "Log in", new_session_path(resource_name) %><br />
        <% end -%>

      </div>
    </div>

  </div>
</div>
