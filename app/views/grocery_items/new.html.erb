<%= render "shared/navbars" %>
<div class="container">
  <div class="row">
    <%= render "shared/sidebar" %>

    <div class="col-md-10">
      <div id="midCol" data-spy="affix" data-offset-top="300">
        <div><h1>New Grocery Item</h1></div>

        <%= simple_form_for @grocery_item do |f| %>
            <%= f.input :name %>
            <%= f.input :amount %>
            <%= f.button :submit %>
        <% end %>

        <%= link_to 'Cancel', grocery_lists_path, class: 'btn btn-success btn-small text', :method => :get %>

      </div>
    </div>

  </div>
</div>
